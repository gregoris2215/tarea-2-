@page "/ej05"
@rendermode InteractiveServer

<h5> Construir una función que reciba como parámetro un entero y retorno. El primer dígito desde entero. </h5>

<input @bind="numA" type="number" placeholder="Ingresa un número" />
<button @onclick="FindFirstDigit">Encontrar</button>

<p>El primer dígito es: @firstDigit</p>

@code {
    private int numA;
    private int firstDigit;

    private void FindFirstDigit()
    {
        firstDigit = GetFirstDigit(numA);
    }

    private int GetFirstDigit(int numA)
    {
        numA = Math.Abs(numA); // Asegurarse de que el número sea positivo

        while (numA >= 10)
        {
            numA /= 10;
        }

        return numA;
    }
}